<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/tab_page_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>
        <RadioGroup
            android:id="@+id/tab_contianer"
            android:layout_width="match_parent"
            android:background="@mipmap/bottom_tab_bg"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_tab_home"
               style="@style/NewsStyle"
                android:text="首页"
                android:drawableTop="@drawable/tab_home_selector"/>
            <RadioButton
                android:id="@+id/rb_tab_news"
                style="@style/NewsStyle"
                android:text="新闻中心"
                android:drawableTop="@drawable/tab_news_selector"/>
            <RadioButton
                android:id="@+id/rb_tab_service"
                style="@style/NewsStyle"
                android:text="智慧服务"
                android:drawableTop="@drawable/tab_service_selector"/>
            <RadioButton
                android:id="@+id/rb_tab_zhenwu"
                style="@style/NewsStyle"
                android:text="政务"
                android:drawableTop="@drawable/tab_zhenwu_selector"/>
            <RadioButton
                android:id="@+id/rb_tab_setting"
                style="@style/NewsStyle"
                android:text="设置中心"
                android:drawableTop="@drawable/tab_seeting_selector"/>




        </RadioGroup>












</LinearLayout>